{
  "name": "problemify",
  "version": "0.3.0",
  "description": "Create problem and solution versions of a directory.",
  "engines": {
    "node": ">=4.2.4"
  },
  "scripts": {
    "build": "babel src/ --out-dir dist/",
    "clean": "rm -rf dist/ test/fixtures/mockUtils-{problem,solution}",
    "lint": "xo --fix",
    "prepublish": "npm run test",
    "test": "npm run build && ava && npm run lint",
    "preversion": "npm run test",
    "postversion": "git push --tags"
  },
  "bin": {
    "problemify": "./dist/bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bcmarinacci/problemify.git"
  },
  "keywords": [
    "hack reactor",
    "makersquare",
    "problem",
    "problemify",
    "reactor core",
    "solution",
    "sprint",
    "strip comments"
  ],
  "author": "Benjamin Marinacci",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bcmarinacci/problemify/issues"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-plugin-transform-runtime": "^6.7.5",
    "xo": "^0.14.0"
  },
  "dependencies": {
    "babel-cli": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "chalk": "^1.1.3",
    "meow": "^3.7.0",
    "ncp": "^2.0.0",
    "pify": "^2.3.0"
  },
  "files": [
    "dist"
  ],
  "xo": {
    "esnext": true,
    "space": 2
  }
}
