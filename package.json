{
  "name": "problemify",
  "version": "1.0.0",
  "description": "Create problem and solution versions of a directory",
  "engines": {
    "node": "^7.8.0",
    "npm": "^4.5.0"
  },
  "bin": {
    "problemify": "./bin/cli.js"
  },
  "scripts": {
    "clean": "rm -rf __fixtures__/utils-{problem,solution}",
    "lint": "eslint --fix bin/ lib/ spec/",
    "test": "npm run clean && jest",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "assignment",
    "cli",
    "delete",
    "multiline",
    "parse",
    "problem",
    "remove",
    "solution",
    "sprint",
    "strip",
    "trim"
  ],
  "author": "Benjamin Marinacci",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcmarinacci/problemify.git"
  },
  "bugs": {
    "url": "https://github.com/bcmarinacci/problemify/issues"
  },
  "files": [
    "bin",
    "lib"
  ],
  "dependencies": {
    "args": "^1.2.1",
    "chalk": "^1.1.3",
    "co": "^4.6.0",
    "list-filepaths": "^1.5.7",
    "mkdirp": "^0.5.1",
    "trim-whitespace": "^1.3.1"
  },
  "devDependencies": {
    "coveralls": "^2.11.9",
    "eslint": "^2.12.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.4.2",
    "eslint-plugin-react": "^5.1.1",
    "jest": "^19.0.2"
  },
  "jest": {
    "bail": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/coverage/",
      "<rootDir>/__fixtures__/",
      "<rootDir>/node_modules/"
    ]
  }
}
