{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread ": true
    }
  },
  "env": {
    "es6": true,
    "jasmine": true,
    "node": true
  },
  "extends": "standard",
  "plugins": [
    "standard",
    "promise",
    "babel"
  ],
  "rules": {
    "generator-star-spacing": 0,
    "new-cap": 0,
    "babel/arrow-parens": [2, "as-needed"],
    "babel/generator-star-spacing": [2, { "before": true, "after": true }],
    "babel/new-cap": [2, { "newIsCap": true, "capIsNew": false }],
    "babel/no-await-in-loop": 2,
    "babel/object-shorthand": [2, "always"]
  }
}
